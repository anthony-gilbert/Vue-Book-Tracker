# Backup of original nginx config
# /etc/nginx/sites-enables/booktracker.dev
# /etc/nginx/sites-available/booktracker.dev

server {
    listen 80;
    server_name booktracker.dev;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name booktracker.dev;
    
    ssl_certificate /etc/letsencrypt/live/anthonygilbert.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/anthonygilbert.dev/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    location / {
        proxy_pass https://127.0.0.1:30989;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_ssl_verify off;
    }
}
